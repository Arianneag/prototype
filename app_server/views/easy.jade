extends layout

block content

  head
  
    // Sidebar CSS
    
    link(href='css/simple-sidebar.css', rel='stylesheet')
    
    title Game1 -- Easy
    
  body
    #wrapper
      // Sidebar
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/')
              | OVERBOOKED
          li
            a(href='#')
              img.img-responsive(src='/images/monsters/red_monster.png', alt='')
          li
            a(href='/medium')
              img.img-responsive(src='/images/monsters/lavender_monster.png', alt='')
          li
            a(href='/hard')
              img.img-responsive(src='/images/monsters/teal_monster.png', alt='')
          // end sidebar
          
        // Page content
      #page-content-wrapper
        .container-fluid
          .row
            .col-lg-12
              h1 EASY
              p
                | See Bob run. RUN, Bob, RUN!
              p

              a#menu-toggle.btn.btn-default(href='#menu-toggle') LEVEL MENU

    // Scripts
   
    script(src='/jquery/jquery.min.js')
    
      // Menu Toggle
    
    script.
      $(document).ready(function() {
      $("#wrapper").toggleClass("toggled");
      });
      $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
      });