extends layout

block content

  head

    // Sidebar CSS
    
    link(href='css/simple-sidebar.css', rel='stylesheet')
    
    title Read Along with Emma!

  body
    #wrapper
      // Sidebar
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/')
              | OVERBOOKED
          li
            a(href='/easy')
              img.img-responsive(src='/images/monsters/red_monster.png', alt='')
          li
            a(href='/medium')
              img.img-responsive(src='/images/monsters/lavender_monster.png', alt='')
          li
            a(href='/hard')
              img.img-responsive(src='/images/monsters/teal_monster.png', alt='')
      //end sidebar
      
      // Page Content
      #page-content-wrapper
        .container-fluid
          .row
            .col-lg-12
              h1 Read Along with Emma!
              p
                | Sounding out words is fun. Let Emma help when you get stuck ...
              p
              
              a#menu-toggle.btn.btn-default(href='#menu-toggle') CHOOSE LEVEL

    // Scripts
   
    script(src='/jquery/jquery.min.js')


           // Menu Toggle
   
    script.
      $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
      });


